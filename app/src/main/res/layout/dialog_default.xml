<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/defDialogContainerLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/horizontalMarginMedium"
    android:background="@drawable/bg_corners_medium_background"
    android:backgroundTint="@color/purple_200"
    android:orientation="vertical"
    android:padding="@dimen/horizontalMarginLarge">

    <ImageView
        android:id="@+id/defDialogIconImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/verticalMarginMedium"
        app:srcCompat="@drawable/ic_filter"
        app:tint="@color/background" />

    <TextView
        android:id="@+id/defDialogTitleTv"
        style="@style/TextBig"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Título" />

    <TextView
        android:id="@+id/defDialogBodyTv"
        style="@style/TextMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/verticalMarginSmall"
        tools:text="Descrição" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/verticalMarginMedium">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/defDialogLeftBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/action_ok"
            android:textColor="@color/colorWhite" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/defDialogRightBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/horizontalMarginMedium"
            android:layout_weight="1"
            android:visibility="gone"
            android:text="@string/action_cancel" />

    </LinearLayout>

</LinearLayout>